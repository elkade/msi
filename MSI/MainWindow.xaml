<Window x:Class="MSI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="MainWindow" Height="350" Width="525" >
    <Grid>
        <TabControl Margin="50,50,50,50">
            <TabItem Header="UserPanel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Content="Opady deszczu" Grid.Row="0"/>
                    <Label Grid.Column="0" Content="Godzina" Grid.Row="1"/>
                    <Label Grid.Column="0" Content="Temperatura" Grid.Row="2"/>
                    <Label Grid.Column="0" Content =" Widoczność"  Grid.Row="3"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Name="RainInput"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Name="HourInput"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Name="TemperatureInput"/>
                    <TextBox Grid.Column="1" Grid.Row="3" Name="VisibilityInput"/>
                    <Button Grid.Column="0" Grid.Row="4" Content="Submit" Click="Submit_OnClick"/>
                    <TextBlock Grid.Column="1" Grid.Row="4" Name="Output" Height="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="ExpertPanel">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <WindowsFormsHost Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="RainWfh">
                        <wf:PictureBox Name="RainPictureBox" SizeMode="StretchImage"/>
                    </WindowsFormsHost>
                    <Label Grid.Column="0" Grid.Row="1" Content="Top" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" ValueChanged="RangeBase_OnValueChanged"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="Bottom" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"/>
                </Grid>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
