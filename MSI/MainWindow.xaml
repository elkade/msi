<Window x:Class="MSI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:msi="clr-namespace:MSI"
        xmlns:fuzzyControls="clr-namespace:MSI.FuzzyControls"
        Title="MainWindow" Height="650" Width="1025" >
    <Grid>
        <TabControl Margin="50,50,50,50" SelectionChanged="Selector_OnSelectionChanged">
            <TabItem Header="UserPanel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Content="Opady deszczu" Grid.Row="0"/>
                    <Label Grid.Column="0" Content="Godzina" Grid.Row="1"/>
                    <Label Grid.Column="0" Content="Temperatura" Grid.Row="2"/>
                    <Label Grid.Column="0" Content =" Widoczność"  Grid.Row="3"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Name="RainInput"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Name="HourInput"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Name="TemperatureInput"/>
                    <TextBox Grid.Column="1" Grid.Row="3" Name="VisibilityInput"/>
                    <Button Grid.Column="0" Grid.Row="4" Content="Submit" Click="Submit_OnClick"/>
                    <TextBlock Grid.Column="1" Grid.Row="4" Name="Output" Height="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="ExpertPanel" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <fuzzyControls:InputFuzzyControl Min="0" Max="10"  x:Name="RainControl" Grid.Column="0" Grid.Row="0"/>
                    <fuzzyControls:InputFuzzyControl Min="-20" Max="40" x:Name="TemperatureControl" Grid.Column="1" Grid.Row="0" />
                    <fuzzyControls:InputFuzzyControl Min="0" Max="1000" x:Name="VisibilityControl" Grid.Column="0" Grid.Row="1" />
                    <fuzzyControls:InputFuzzyControl Min="0" Max="24" x:Name="HourControl" Grid.Column="1" Grid.Row="1" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
